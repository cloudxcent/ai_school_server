{
  "info": {
    "name": "AI School Kids Profiles API",
    "description": "Complete API collection for testing kids profiles functionality",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/health",
              "host": ["{{base_url}}"],
              "path": ["api", "health"]
            }
          }
        },
        {
          "name": "Register Parent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"parent@test.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"Test Parent\",\n  \"phone_number\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login Parent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"parent@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/user",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "user"]
            }
          }
        }
      ]
    },
    {
      "name": "Kids Profiles",
      "item": [
        {
          "name": "Get All Kids Profiles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/profiles",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles"]
            }
          }
        },
        {
          "name": "Create Kid Profile - Alice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Johnson\",\n  \"age\": 7,\n  \"grade\": \"2nd Grade\",\n  \"avatar\": \"girl_avatar_1\",\n  \"learning_goals\": \"Improve reading and basic math\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/profiles",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles"]
            }
          }
        },
        {
          "name": "Create Kid Profile - Bob",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bob Johnson\",\n  \"age\": 10,\n  \"grade\": \"5th Grade\",\n  \"avatar\": \"boy_avatar_1\",\n  \"learning_goals\": \"Advanced mathematics and science\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/profiles",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles"]
            }
          }
        },
        {
          "name": "Get Specific Kid Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/profiles/{{profile_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles", "{{profile_id}}"]
            }
          }
        },
        {
          "name": "Update Kid Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"age\": 8,\n  \"grade\": \"3rd Grade\",\n  \"learning_goals\": \"Reading comprehension and multiplication tables\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/profiles/{{profile_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles", "{{profile_id}}"]
            }
          }
        },
        {
          "name": "Delete Kid Profile",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/profiles/{{profile_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles", "{{profile_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Validation Tests",
      "item": [
        {
          "name": "Create Profile - Invalid Age",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Invalid Kid\",\n  \"age\": 25\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/profiles",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles"]
            }
          }
        },
        {
          "name": "Create Profile - Missing Name",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"age\": 8\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/profiles",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles"]
            }
          }
        }
      ]
    },
    {
      "name": "Security Tests",
      "item": [
        {
          "name": "Get Profiles - No Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/profiles",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles"]
            }
          }
        },
        {
          "name": "Get Profiles - Invalid Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid_token_123"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/profiles",
              "host": ["{{base_url}}"],
              "path": ["api", "profiles"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "profile_id",
      "value": "",
      "type": "string"
    }
  ]
}
